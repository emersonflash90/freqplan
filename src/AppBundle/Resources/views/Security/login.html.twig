{% extends "layout-user.html.twig" %}
{% trans_default_domain 'FOSUserBundle' %}
{% block title %}Connexion{% endblock %}

{% block body %}
    <div class="ui middle aligned center aligned grid login_page">
        <div class="column">
            <h2 class="ui image header">
                <img src="{{asset('bundles/app/images/background.png')}}" class="image">
                <div style="font-size: 18px;" class="content">
                    Log-in to your account
                </div>
            </h2>
            {% if error %}
                <div class="ui negative message">
                    <i class="close icon"></i>
                    <span class="">{{ error.messageKey|trans(error.messageData, 'FOSUserBundle') }}</span>
                </div>
            {% endif %}
            <form id="login_form" class="ui large form" action="{{ path("fos_user_security_check") }}" method="post">
                <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                <div class="ui stacked segment">
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="user icon"></i>
                            <input type="text" name="_username" placeholder="E-mail or username">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui left icon input">
                            <i class="lock icon"></i>
                            <input type="password" name="_password" placeholder="Password">
                        </div>
                    </div>
                    <div class="field">
                        <div class="ui checkbox">
                            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                            <label>Se souvenir de moi</label>
                        </div>
                    </div>
                    <button id="submit_login_form" class="ui black submit button">Login</button>
                    <a class="reset_password">Reset Password</a>
                </div>

                <div class="ui error message"></div>

            </form>
        </div>
    </div>                

    {% include('footer.html.twig') %}
{% endblock %}